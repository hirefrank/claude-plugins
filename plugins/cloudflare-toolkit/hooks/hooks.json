{
  "description": "Cloudflare Workers validation hooks for code quality and configuration checks",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "commit",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/pre-commit-cloudflare-validation.sh"
          }
        ]
      }
    ]
  }
}
